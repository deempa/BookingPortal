<%-include("header")-%>
    
    <form action="/BookPayment" method="post">
        <h3 class="m-4">Payment Information</h3>
        <label for="school" class="form-label">Your School</label>
        <select name="school" class="form-select">
            <option value="mit">MIT</option>
            <option value="harvard">Harvard</option>
            <option value="tau">Tau</option>
        </select>

        <label for="tuition_amount" class="form-label">Tuition Amount</label>
        <input type="text" name="tuition_amount" class="form-control">
        
        <h3 class="m-4">Sender Information</h3>
        
        <label for="student_id" class="form-label">Student ID</label>
        <input type="text" name="student_id" class="form-control">

        <label for="your_name" class="form-label">Your name</label>
        <input type="text" name="your_name" class="form-control">

        <label for="email_address" class="form-label">Email</label>
        <input type="email" name="email_address" class="form-control">

        <label for="country" class="form-label">Country</label>
        <select name="country" class="form-select">
            <option value="israel">Israel</option>
            <option value="usa">USA</option>
            <option value="spain">Spain</option>
        </select>

        <label for="address" class="form-label">Address</label>
        <input type="text" name="address" class="form-control">

        <div class="text-center">
            <button type="submit" class="btn btn-primary m-4">Book A Payment</button>
        </div>
        
    </form>
<%-include("footer")-%>